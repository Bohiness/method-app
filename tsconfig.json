{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "types": ["nativewind/types"],
        "baseUrl": ".",
        "moduleResolution": "node",
        "paths": {
            "@app/*": ["./app/*"],
            "@assets/*": ["./assets/*"],
            "@pages/*": ["./src/pages/*"],
            "@widgets/*": ["./src/widgets/*"],
            "@features/*": ["./src/features/*"],
            "@entities/*": ["./src/entities/*"],
            "@shared/*": ["./src/shared/*"],
            "@processes/*": ["./src/processes/*"],
            "@config/*": ["./src/shared/config/*"],
            "@context/*": ["./src/shared/context/*"],
            "@lib/*": ["./src/shared/lib/*"],
            "@ui/*": ["./src/shared/ui/*"],
            "@hooks/*": ["./src/shared/hooks/*"],
            "@types/*": ["./src/shared/types/*"],
            "@api/*": ["./src/shared/api/*"],
            "@constants/*": ["./src/shared/constants/*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "nativewind-env.d.ts",
        "tailwind.config.ts",
        "tailwind.config.js",
        "./app/**/*.{js,jsx,ts,tsx}",
        "./src/**/*.{js,jsx,ts,tsx}",
        ".expo/types/**/*.ts",
        "expo-env.d.ts"
    ],
    "exclude": ["node_modules"]
}
